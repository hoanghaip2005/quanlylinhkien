<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Phu Tung Xe Shop</display-name>
    
    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Session timeout (30 minutes) -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <!-- Error pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>
    
    <!-- Filter for character encoding -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.phutungxe.controller.auth.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- Filter for authentication -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.phutungxe.controller.auth.AuthenticationFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>
    
    <!-- Servlet mappings -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.phutungxe.controller.auth.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.phutungxe.controller.auth.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.phutungxe.controller.auth.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>com.phutungxe.controller.product.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>com.phutungxe.controller.cart.CartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>com.phutungxe.controller.order.OrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderServlet</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>OrderHistoryServlet</servlet-name>
        <servlet-class>com.phutungxe.controller.order.OrderHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderHistoryServlet</servlet-name>
        <url-pattern>/order-history</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ApiProductServlet</servlet-name>
        <servlet-class>com.phutungxe.controller.product.ApiProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApiProductServlet</servlet-name>
        <url-pattern>/api/featured-products</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>com.phutungxe.controller.admin.AdminDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AdminProductServlet</servlet-name>
        <servlet-class>com.phutungxe.controller.admin.AdminProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminProductServlet</servlet-name>
        <url-pattern>/admin/products</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AdminUserServlet</servlet-name>
        <servlet-class>com.phutungxe.controller.admin.AdminUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminUserServlet</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AdminOrderServlet</servlet-name>
        <servlet-class>com.phutungxe.controller.admin.AdminOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminOrderServlet</servlet-name>
        <url-pattern>/admin/orders</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>OrdersNewServlet</servlet-name>
        <servlet-class>com.phutungxe.controller.order.OrdersNewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrdersNewServlet</servlet-name>
        <url-pattern>/admin/orders_new</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SimpleOrderServlet</servlet-name>
        <servlet-class>com.phutungxe.controller.order.SimpleOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SimpleOrderServlet</servlet-name>
        <url-pattern>/admin/simple-orders</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AdminCategoryServlet</servlet-name>
        <servlet-class>com.phutungxe.controller.admin.AdminCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminCategoryServlet</servlet-name>
        <url-pattern>/admin/categories</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AdminSettingsServlet</servlet-name>
        <servlet-class>com.phutungxe.controller.admin.AdminSettingsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminSettingsServlet</servlet-name>
        <url-pattern>/admin/settings</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AdminReportsServlet</servlet-name>
        <servlet-class>com.phutungxe.controller.admin.AdminReportsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminReportsServlet</servlet-name>
        <url-pattern>/admin/reports</url-pattern>
    </servlet-mapping>
    
</web-app>
